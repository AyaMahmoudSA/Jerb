<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.av.jerb.PlanActivity">


    <CheckBox
        android:id="@+id/checkbox_notdecided"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:checked="false"
        android:text="we haven't decided  yet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.439"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_money_cash"
        app:layout_constraintVertical_bias="0.034" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_plan"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="-1dp"
        android:background="@color/colorPrimary"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">





        <TextView
            android:id="@+id/txt_love_story"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:text="Love Story"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar_plan"
            app:layout_constraintLeft_toRightOf="@+id/img_back"
            app:layout_constraintTop_toTopOf="@+id/toolbar_plan"
            app:layout_constraintVertical_bias="1.0"
             />

        <TextView
            android:id="@+id/txt_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:text="next"
            android:layout_gravity="right"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintLeft_toRightOf="@+id/txt_love_story"
            android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="1.0" />

    </android.support.v7.widget.Toolbar>



    <TextView
        android:id="@+id/text_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="124dp"
        android:layout_marginTop="19dp"
        android:gravity="center_horizontal"
        android:text=" You're celebrating at "
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/img_location"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_plan"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="124dp" />

    <ImageView
        android:id="@+id/img_location"
        android:layout_width="43dp"
        android:layout_height="43dp"
        app:srcCompat="@drawable/ic_location"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_plan"
        android:layout_marginLeft="40dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <AutoCompleteTextView
        android:id="@+id/edittext_autocomplete_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:hint="Enter your location"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_location" />

    <CheckBox
        android:id="@+id/checkbox_anylocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="7dp"
        android:checked="false"
        android:text="we haven't decided  yet"
        app:layout_constraintHorizontal_bias="0.434"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittext_autocomplete_location"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <ImageView
        android:id="@+id/img_celebratin"
        android:layout_width="43dp"
        android:layout_height="43dp"
        app:srcCompat="@drawable/ic_celebration"
        android:layout_marginLeft="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_anylocation" />

    <TextView
        android:id="@+id/txt_family_friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="35dp"
        android:layout_marginTop="47dp"
        android:text="How many friends &amp; family?"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_anylocation"
        app:layout_constraintLeft_toRightOf="@+id/img_celebratin"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <ImageView
        android:id="@+id/img_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_friends_min"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/img_celebratin"
        android:layout_marginLeft="40dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/img_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_friends_max"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_family_friends"
        android:layout_marginRight="51dp"
        app:layout_constraintRight_toRightOf="parent" />

    <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toRightOf="@+id/img_min"
        app:layout_constraintRight_toLeftOf="@+id/img_max"
        android:layout_marginRight="8dp"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_family_friends"
        app:layout_constraintHorizontal_bias="0.363"
        app:dsb_indicatorColor="@color/colorPrimary"
        app:dsb_trackColor="@color/colorPrimary"
        app:dsb_progressColor="@color/colorPrimary"
        app:dsb_min="100"
        app:dsb_max="1000"
        app:dsb_value="200"
        android:id="@+id/seekbar_friends_family" />

    <ImageView
        android:id="@+id/img_money"
        android:layout_width="43dp"
        android:layout_height="43dp"
        app:srcCompat="@drawable/ic_money"
        android:layout_marginLeft="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/seekbar_friends_family" />

    <TextView
        android:id="@+id/txt_plan_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="59dp"
        android:text="Planning to send"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.037"
        app:layout_constraintLeft_toRightOf="@+id/img_money"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekbar_friends_family" />

    <EditText
        android:id="@+id/et_money_cash"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="12dp"
        android:drawableLeft="@drawable/ic_attach_money"
        android:ems="10"
        android:hint="0.0"
        android:inputType="numberDecimal"
        app:layout_constraintHorizontal_bias="0.393"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_plan_end" />

</android.support.constraint.ConstraintLayout>
